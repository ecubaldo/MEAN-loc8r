extends layout

block content
	.row.page-header
		.col-lg-12
			h1= pageHeader.title
	.row
		.col-xs-12.col-md-6
			//- when the form is submitted it will make a POST request to the URL of the current page.
				/location/:locationid/reviews/new
			form.form-horizontal(action="#{url}", method="post", role="form")
				- if (error == "val")
					.alert.alert-danger(role="alert") Todos los campos se requieren, por favor int√©ntelo de nuevo.
				.form-group
					label.col-xs-10.col-sm-2.control-label(for="name") Nombre
					.col-xs-12.col-sm-10
						input#name.form-control(name="name")
				.form-group
					label.col-xs-10.col-sm-2.control-label(for="rating") Rating
					.col-xs-12.col-sm-2
						select#rating.form-control.input-sm(name="rating")
							option 5
							option 4
							option 3
							option 2
							option 1
				.form-group
					label.col-sm-2.control-label(for="review") Comentario
					.col-sm-10
						textarea#review.form-control(name="review", rows="5")
				button.btn.btn-default.pull-right Agregar mi comentario
		.col-xs-12.col-md-4